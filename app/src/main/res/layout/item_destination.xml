<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
  android:padding="2dp" android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/img_destination"
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:scaleType="center" />

        <TextView
            android:id="@+id/tv_libelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:textColor="#0E0E0E"
            android:layout_margin="5dp"
            android:layout_below="@id/img_destination"/>
    <RelativeLayout
        android:layout_below="@id/tv_libelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/layout_relative1">
        <TextView
            android:id="@+id/tv_categorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0C0C0C" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
            android:id="@+id/checkbox"/>
    </RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_relative2"
    android:layout_below="@id/layout_relative1"
    android:layout_marginLeft="5dp">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:src="@drawable/destination"
        android:id="@+id/icon"/>
    <TextView
        android:id="@+id/tv_km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="20dp"
        android:textColor="#0C0C0C"
        android:layout_toRightOf="@id/icon"
        />

</RelativeLayout>









</RelativeLayout>